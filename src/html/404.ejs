<%
const headerWhite = require('./layouts/basic/header-white.ejs');
const footer = require('./layouts/basic/footer.ejs');

%>

<%- headerWhite()-%>
<main class="page">
    <section class="section section--mobile-normal-479">
        <div class="bg-red not-found layout container c-white">
            <div class="not-found__row">
                <div class="fs-14 not-found__err anim-opacity delay-05 js-scroll-observe-el" data-ratio="0.5">ERROR 404</div>

                <div class="title fs-160">
                    <div class="overflow-hidden js-scroll-observe-el">
                        <div class="anim-up-from-overflow js-scroll-observe-el-inner" data-duration="0.5">Page not found</div>
                    </div>
                </div>
                <a href="/main.html" class="hover-line btn fs-20 anim-opacity delay-05 js-scroll-observe-el" data-ratio="0.5">
                    Back to the main page
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3.75 12H19.6497M13.5 18.75L20.25 12L13.5 5.25" stroke="currentColor" stroke-width="1.5" stroke-linecap="square"></path>
                    </svg>
                </a>
            </div>
            <div class="not-found__bg">
                <div class="not-found__img bg-red not-found__img--1 anim-down-from-overflow delay-03 overflow-hidden js-scroll-observe-el" data-ratio="0.3">
                    <img loading="lazy" src="images/content/background-img-01.jpg" alt="">
                </div>
                <div class="not-found__img bg-red not-found__img--2 anim-down-from-overflow delay-03 overflow-hidden js-scroll-observe-el" data-ratio="0.3">
                    <img loading="lazy" src="images/content/background-img-02.jpg" alt="">
                </div>
                <div class="not-found__img bg-red not-found__img--3 anim-down-from-overflow delay-03 overflow-hidden js-scroll-observe-el" data-ratio="0.3">
                    <img loading="lazy" src="images/content/background-img-03.jpg" alt="">
                </div>
            </div>
        </div>
    </section>

</main>
<div class="overlay-page _before" style="position: fixed;left: 0;width: 100%;height: 100%;z-index: 100;background-color: #222222; top: 100%"></div>
<div class="overlay-page _after" style="position: fixed;left: 0;width: 100%;height: 100%;z-index: 100;background-color: #222222; top: 0"></div>
<%- footer() -%>


